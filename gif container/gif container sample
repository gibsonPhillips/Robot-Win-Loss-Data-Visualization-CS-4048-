<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Display GIF in HTML</title>
    <style>
        /* CSS styles for the container */
        .gif-container {
            position: relative;
            width: 800px;
            /* Adjust the width as needed */
            height: 200px;
            /* Adjust the height as needed */
            border: 2px solid black;
            /* Black outline */
            overflow: hidden;
            /* Ensure GIFs stay within the container */
        }

        /* CSS styles for the GIFs */
        .car1,
        .car2 {
            position: absolute;
            bottom: 0;
            /* Align the GIFs to the bottom */
            width: 200px;
            /* Adjust the width as needed */
            height: auto;
            /* Maintain aspect ratio */
        }

        .car1 {
            left: -200px;
            /* Start from outside the container */
            animation: moveRight1 3s linear forwards;
            /* Stop animation at the end */
        }

        .car2 {
            right: -200px;
            /* Start from outside the container */
            animation: moveLeft2 3s linear forwards;
            /* Stop animation at the end */
            transform: scaleX(-1);
            /* Flip the second GIF horizontally */
        }

        /* Keyframes for the animation */
        @keyframes moveRight1 {
            0% {
                left: -200px;
                /* Move out of the container */
            }

            20% {
                left: calc(50% - 150px);
                /* Move to the middle of the container */
            }
            40% {
                left: calc(30% - 200px);
                /* Move out of the container */
            }

            60% {
                left: calc(50% - 200px);
                /* Move to the middle of the container */
            }

            100% {
                top: -100px;
               left: calc(50% - 200px);

                /* Stop at the middle of the container */
            }
        }

        @keyframes moveLeft2 {
            0% {
                right: -200px;
                /* Move out of the container */
            }

            50% {
                right: calc(50% - 200px);
                /* Move to the middle of the container */
            }

            100% {
                right: calc(50% - 200px);
                /* Stop at the middle of the container */
            }
        }

         @keyframes moveLeft1 {
            0% {
                left: calc(50% - 200px);
                /* Move out of the container */
            }

            50% {
                left: calc(30% - 200px);
                /* Move to the middle of the container */
            }

            100% {
                left: calc(30% - 200px);
                /* Stop at the middle of the container */
            }
        }
    </style>
</head>

